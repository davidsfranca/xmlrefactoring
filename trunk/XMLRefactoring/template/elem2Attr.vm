<?xml version="1.0" encoding="iso-8859-1"?>
<xsl:stylesheet 
		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
		version="2.0">

<xsl:template match="*">
    <xsl:copy>
        <xsl:copy-of select="@*"/>
        <xsl:apply-templates />
    </xsl:copy>
</xsl:template>

<!-- substitui uma tag por outra copiando os valores de 
	atributo namesapce e descendentes-->

	<xsl:template match="/">
		<xsl:copy>
	    		<xsl:attribute name="$element.getLocalPart()" namespace="$element.getNamespaceURI()">
				<xsl:value-of select="@* [((local-name(.) ='$element.getLocalPart()')and(namespace-uri(.)='$element.getNamespaceURI()'))]"/>
	    		</xsl:attribute>
	    		<xsl:for-each select="namespace::*">
				<xsl:copy />
	 		<xsl:apply-templates/>
		</xsl:copy>
	</xsl:template>
</xsl:stylesheet>